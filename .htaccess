
AddDefaultCharset utf-8

RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php

Options -Indexes

ErrorDocument 403 /application/views/errors/403.php
ErrorDocument 404 /application/views/errors/404.php
ErrorDocument 500 /application/views/errors/500.php
